<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_task1"
            style="@style/buttonStyle.Green"
            android:background="@drawable/button_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_gap_corner"
            android:layout_marginStart="@dimen/margin_gap_corner"
            android:layout_marginTop="@dimen/margin_gap_corner"
            android:text="@string/task_1"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_task2"
            style="@style/buttonStyle.Green"
            android:background="@drawable/button_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_task1"
            android:layout_marginEnd="@dimen/margin_gap_corner"
            android:layout_marginStart="@dimen/margin_gap_corner"
            android:layout_marginTop="@dimen/margin_gap_corner"
            android:text="@string/task_2"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
</layout>